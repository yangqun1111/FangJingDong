<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.jingdongdemo.MainActivity">
    <com.example.lenovo.fangjingdong.view.MyMainVp
        android:id="@+id/main_vp"
        android:layout_above="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </com.example.lenovo.fangjingdong.view.MyMainVp>
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/main_bt1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/rg_bg_selector_shou"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/main_bt2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/rg_bg_selector_fen"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/main_bt3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/rg_bg_selector_fa"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/main_bt4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/rg_bg_selector_gou"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/main_bt5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/rg_bg_selector_wo"
            android:layout_height="match_parent"/>
    </RadioGroup>

</RelativeLayout>
